<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LikesAndSwipes</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css?4" asp-append-version="true" />
    <link rel="stylesheet" href="~/LikesAndSwipes.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Top Navigation -->
    <header class="navbar">
        <div class="nav-left">
            <div class="brand">LikesAndSwipes</div>
            <nav>
                <a href="#">Home</a>
                <a href="#">Privacy</a>
            </nav>
        </div>
        <div class="nav-right">
            <partial name="_LoginPartial" />
        </div>
    </header>

    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer">
        © 2026 - LikesAndSwipes - <a href="#">Privacy</a>
    </footer>
    <script src="~/js/site.js?2" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
