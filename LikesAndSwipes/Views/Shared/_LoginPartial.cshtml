@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <a class="" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="login-link">Logout</button>
    </form>

}
else
{
    <a class="" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="" asp-area="Identity" asp-page="/Account/Login">Login</a>
}

