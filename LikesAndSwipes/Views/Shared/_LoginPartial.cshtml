@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="auth-links">
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="login-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="login-link">Logout</button>
        </form>

    }
    else
    {
        <a class="register-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="login-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }
</div>
